{
  "version": "0.0.0",
  "name": "github-actions",
  "description": "Collection of custom github actions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test",
    "prepare": "husky install"
  },
  "repository": "https://github.com/cakarci/github-actions.git",
  "author": "cakarci <salihcakarci@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "actions",
    "github",
    "github-actions",
    "workflow"
  ],
  "dependencies": {
    "@actions/core": "^1.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@typescript-eslint/parser": "^5.36.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^27.0.1",
    "husky": "^8.0.1",
    "jest": "28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  }
}
